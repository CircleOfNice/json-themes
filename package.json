{
  "name": "@circle/json-themes",
  "version": "2.0.5",
  "description": "A toolbox around theming for component libraries",
  "files": [
    "./dist/*"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "browser": "./dist/index.umd.js",
      "default": "./dist/index.umd.js"
    },
    "./index.d.ts": "./index.d.ts"
  },
  "type": "module",
  "source": "src/index.ts",
  "scripts": {
    "test": "ava",
    "lint": "eslint",
    "check": "tsc --noEmit",
    "start": "vite serve src/app",
    "pkg-json": "node scripts/create-pkg-json.cjs",
    "build": "tsc --project tsconfig.build.json && vite build && tsc && npm run pkg-json && cp ./README.md ./dist/README.md && cp ./LICENSE ./dist/LICENSE",
    "handle-version": "node scripts/handle-version.cjs",
    "pub": "npm run lint && npm test && npm run handle-version && npm run build && cd ./dist && npm publish"
  },
  "keywords": [
    "react",
    "utils",
    "javascript",
    "typescript",
    "library",
    "component library",
    "theming",
    "react theming"
  ],
  "author": "max-crcl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CircleOfNice/json-themes"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/react": "^18.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vitejs/plugin-react": "^4.0.0",
    "ava": "^5.2.0",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "np": "^7.7.0",
    "react": "^18.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.4"
  },
  "dependencies": {
    "deepmerge-ts": "^5.1.0",
    "goober": "^2.1.13"
  },
  "peerDependencies": {
    "react": ">18.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  },
  "staticFiles": {
    "staticPath": "src/static"
  },
  "ava": {
    "files": [
      "src/**/tests/**/*"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ]
  }
}
