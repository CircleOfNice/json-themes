{
  "name": "@circle/json-themes",
  "version": "1.1.1",
  "description": "A toolbox around theming for component libraries",
  "files": [
    "./dist/*"
  ],
  "main": "./dist/index.js",
  "module": "./dist/module.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "browser": "./dist/index.umd.js",
      "default": "./dist/index.umd.js"
    }
  },
  "source": "src/index.ts",
  "scripts": {
    "test": "echo test",
    "lint": "eslint",
    "check": "tsc --noEmit",
    "start": "vite serve src/app",
    "pkg-json": "node scripts/create-pkg-json.cjs",
    "build": "tsc --project tsconfig.build.json && vite build && tsc && npm run pkg-json && cp ./README.md ./dist/README.md && cp ./LICENSE ./dist/LICENSE",
    "handle-version": "node scripts/handle-version.cjs",
    "pub": "npm run lint && npm test && npm run handle-version && npm run build && cd ./dist && npm publish"
  },
  "keywords": [
    "react",
    "utils",
    "javascript",
    "typescript",
    "library",
    "component library",
    "theming",
    "react theming"
  ],
  "author": "max-crcl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CircleOfNice/json-themes"
  },
  "workspaces": {
    "packages": [
      "src/lib/*",
      "src/app/*"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@babel/core": "^7.18.9",
    "@types/babel__core": "^7.1.19",
    "@types/react": "^17.0.47",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.20.0",
    "eslint-plugin-react": "^7.30.1",
    "np": "^7.6.2",
    "react": "^17.0.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.3"
  },
  "dependencies": {
    "deepmerge-ts": "^4.2.1",
    "goober": "^2.1.10"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "engines": {
    "node": "^12.20.0 || >=14.13.1"
  },
  "staticFiles": {
    "staticPath": "src/static"
  }
}
